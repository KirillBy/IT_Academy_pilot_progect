<UserControl x:Class="PizzaAdmin.Controls.UserControl1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaAdmin.Controls"
        mc:Ignorable="d"
       d:DesignHeight="200" d:DesignWidth="300">
    <Grid >
        <StackPanel Margin="5">
            <TextBlock x:Name="nameTextBox" FontSize="20"
                                   FontWeight="Bold"/>
            <TextBlock x:Name="descriptionTextBox" FontSize="15"
                                   Foreground="DodgerBlue"/>
            <TextBlock x:Name="ingredientsTextBox" FontSize="15"
                                   FontStyle="Italic"/>
            <TextBlock x:Name="priceTextBox" FontSize="15"
                                   FontStyle="Normal"/>
            <Image Name="ImageViewer2" Height="100" Width="100" Margin="0,0,0,5"
                   HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</UserControl>
